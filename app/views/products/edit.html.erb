<h1>商品の表示</h1>

<%= error_messages_for :product %>

<% form_for(@product) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Image url</b><br />
    <%= f.text_field :image_url %>
  </p>

  <p>
    <b>価格</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.submit "更新" %>
  </p>
<% end %>

<%= link_to '表示', @product %> |
<%= link_to '戻る', products_path %>
